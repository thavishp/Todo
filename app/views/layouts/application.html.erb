<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <div class="nav-wrapper">
        <% if user_signed_in? %>
          <%= link_to('Todos', to_dos_path, class: 'brand-logo') %>
        <% else %>
          <%= link_to('Todos', {controller: '/public'}, class: 'brand-logo') %>
        <% end %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <li><%= current_user.email %></li>
            <li class="nav-link" ><%= link_to('Sign Out', destroy_user_session_path, method: 'DELETE') %></li>
          <% else %>
            <li class="nav-link" ><%= link_to('Sign In', new_user_session_path ) %></li>
            <li class="nav-link" ><%= link_to('Sign Up', new_user_registration_path ) %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>

  <main>
    <div class="content container">
      <%= yield %>
    </div>
  </main>

  <footer>
    
  </footer>

</body>
</html>
